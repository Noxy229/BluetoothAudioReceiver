<Window x:Class="BluetoothAudioReceiver.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hilfe &amp; Problemlösung" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">
    
    <Border Background="{StaticResource BackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="❓" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Hilfe &amp; Problemlösung" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <Button Content="✕" 
                            Click="CloseButton_Click"
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            FontSize="12"
                            Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    
                    <!-- Quick Start -->
                    <TextBlock Text="SCHNELLSTART" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12">
                                <Run FontWeight="SemiBold">1.</Run> Handy in Windows Bluetooth-Einstellungen koppeln<LineBreak/>
                                <Run FontWeight="SemiBold">2.</Run> App starten und Gerät aus der Liste wählen<LineBreak/>
                                <Run FontWeight="SemiBold">3.</Run> "Open Connection" klicken<LineBreak/>
                                <Run FontWeight="SemiBold">4.</Run> Audio auf dem Handy abspielen
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Known Issues -->
                    <TextBlock Text="⚠️ BEKANNTE PROBLEME" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <StackPanel>
                            
                            <!-- Issue 1 -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Netzwerk/Download-Geschwindigkeit sinkt" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource WarningBrush}"
                                           Margin="0,0,0,6"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                    Bluetooth und WiFi nutzen oft das gleiche 2.4 GHz Frequenzband. 
                                    Dies führt zu Interferenzen.
                                </TextBlock>
                                <Border Background="{StaticResource SurfaceVariantBrush}" 
                                        CornerRadius="6" 
                                        Padding="12" 
                                        Margin="0,8,0,0">
                                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                        <Run FontWeight="SemiBold">Lösung:</Run><LineBreak/>
                                        • 5 GHz WiFi nutzen (beste Option!)<LineBreak/>
                                        • Geräte-Manager → WiFi-Adapter → Eigenschaften<LineBreak/>
                                        • "Bluetooth Collaboration" deaktivieren<LineBreak/>
                                        • Separaten USB-Bluetooth-Dongle verwenden
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            
                            <!-- Issue 2 -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Keine Geräte in der Liste" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource WarningBrush}"
                                           Margin="0,0,0,6"/>
                                <Border Background="{StaticResource SurfaceVariantBrush}" 
                                        CornerRadius="6" 
                                        Padding="12">
                                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                        <Run FontWeight="SemiBold">Lösung:</Run><LineBreak/>
                                        • Handy mit PC in Windows-Einstellungen koppeln<LineBreak/>
                                        • Bluetooth auf Handy und PC aktiviert?<LineBreak/>
                                        • Windows 10 Version 2004+ oder Windows 11 nötig
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            
                            <!-- Issue 3 -->
                            <StackPanel>
                                <TextBlock Text="Verbindung bricht ab" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource WarningBrush}"
                                           Margin="0,0,0,6"/>
                                <Border Background="{StaticResource SurfaceVariantBrush}" 
                                        CornerRadius="6" 
                                        Padding="12">
                                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                        <Run FontWeight="SemiBold">Lösung:</Run><LineBreak/>
                                        • Bluetooth-Treiber aktualisieren<LineBreak/>
                                        • Geräte-Manager → Bluetooth-Adapter → "Energiesparmodus" deaktivieren<LineBreak/>
                                        • Handy in Reichweite halten (&lt;10m)
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>
                    
                    <!-- System Requirements -->
                    <TextBlock Text="SYSTEMANFORDERUNGEN" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            • Windows 10 Version 2004 (Mai 2020 Update) oder neuer<LineBreak/>
                            • Windows 11 (alle Versionen)<LineBreak/>
                            • Bluetooth-Adapter mit A2DP Unterstützung<LineBreak/>
                            • Gekoppeltes Bluetooth-Gerät (Handy, Tablet, etc.)
                        </TextBlock>
                    </Border>
                    
                    <!-- Version Info -->
                    <TextBlock Text="INFO" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                <Run Text="Version: "/><Run Text="2.0.0" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/><LineBreak/>
                                <Run Text="Entwickelt mit .NET 8 und WPF"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
